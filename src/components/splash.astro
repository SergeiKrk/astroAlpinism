---
import { Picture } from "@astrojs/image/components";
import astronautImage from "~/assets/alpinist_1200w.png";
import HeroImage from "~/components/hero-image.astro";
import HeadForm from "./headForm.astro";
import StartBgField from "./startBgField.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <StartBgField />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center lg:grid-cols-2">
    <div
      class="mx-6 mb-20 mt-6 flex-col gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end lg:flex xl:flex 2xl:flex"
    >
      <h1>
        <div class="font-extrabold tracking-tighter text-white text-4xl">
          ПРОМЫШЛЕННЫЙ АЛЬПИНИЗМ
          <br /> Высотные работы в Ульяновске
        </div>
      </h1>

      <HeadForm />
    </div>
    <div
      id="astronaut"
      class="invisible w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start md:visible lg:visible xl:visible 2xl:visible"
    >
      <Picture
        class="h-full w-full object-cover"
        src={astronautImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="Промышленный альпинист"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, -30px, 0);
    }

    100% {
      transform: translate3d(0, 0, 0);
    }
  }

  #astronaut {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
