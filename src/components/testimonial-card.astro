---
import { Picture } from "@astrojs/image/components";
import type { TestimonialSite } from "~/types";

export interface Props {
  site: TestimonialSite;
}

const { site } = Astro.props;

const widths = [400, 600];
const sizes = "(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw";
---

<div
  class="aspect-auto rounded-3xl border border-gray-100 bg-white p-8 shadow-2xl shadow-gray-600/10 dark:border-gray-700 dark:bg-gray-800 dark:shadow-none"
>
  <div class="flex gap-4">
    <Picture
      class="h-12 w-12 rounded-full"
      src={site.image}
      widths={widths}
      sizes={sizes}
      alt={site.name}
    />
    <div>
      <h6 class="font-medium text-gray-700 text-lg dark:text-white">
        {site.name}
      </h6>
    </div>
  </div>
  <p class="mt-8 italic">" {site.testimonial} "</p>
</div>
