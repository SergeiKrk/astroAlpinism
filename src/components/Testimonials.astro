import type { TestimonialsItem } from "~/types";

const testimonials: Array<TestimonialsItem> = [
  {
    avatar: "~/assets/avatars/Нина Хацкевич (Архипова).png",
    name: "Нина Хацкевич (Архипова)",
    designation:
      "Спасибо большое Алексею Александровичу за оказанную услугу: заделка швов в панельном доме. Всё было сделано четко по времени, как и договаривались. Сделано всё аккуратно. Меня всё устроило. Буду рекомендовать всем, особенно соседям своего подъезда, потому что всех нас объединяет эта проблема. Спасибо Вам большое, Алексей Александрович за Ваш труд.",
