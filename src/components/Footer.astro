---
import { Icon } from "astro-icon";
import type { FooterLink } from "../types";

const brand = "ПромАльпВысота";
const today = new Date();

const links: Array<FooterLink> = [
  {
    url: "https://astro.build/",
    description: "Група в VK",
    icon: "ei:sc-vk",
  },
  {
    url: "https://t.me/79372758313",
    description: "Telegram",
    icon: "fa-brands:telegram",
  },
  {
    url: "https://wa.me/79372758313",
    description: "Whatsapp",
    icon: "fa-brands:whatsapp",
  },
];
---

<footer class="relative flex h-48 items-center justify-center bg-gray-200">
  <!-- Grid -->
  <div class="text-center">
    <div class="mt-3">
      <p class="text-gray-500">Промышленный альпинизм в Ульяновске.</p>
      <p class="text-gray-500">
        <a
          class="flex-none font-semibold text-black dark:text-white"
          href="/"
          aria-label="Brand">{brand}</a
        > &copy; {today.getFullYear()}.
      </p>
    </div>

    <!-- Social Brands -->
    <div class="mt-3 space-x-2">
      {
        links.map((link) => (
          <a
            class="inline-flex h-10 w-10 items-center justify-center rounded-full text-center text-gray-500 transition hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white dark:text-gray-500 dark:hover:bg-gray-800 dark:hover:text-gray-200"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-6" name={link.icon} />
          </a>
        ))
      }
    </div>
    <!-- End Social Brands -->
  </div>
  <!-- End Grid -->
</footer>
